@using System.Web.Optimization

@{ 
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/styles")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="row container center-block table-bordered">
            <h1 class="table-bordered text-center text-capitalize">Insurance Quote Application</h1>
            @if (User.Identity.IsAuthenticated)
            {
                <p>Welcome back @User.Identity.Name</p>
                <a href="@Url.RouteUrl("logout")">Logout</a>

                if (User.IsInRole("admin"))
                {
                    <a href="@Url.Action("Admin", "Auth", new {area="admin"})">View post in admin</a>
                }
            }
            <a href="@Url.RouteUrl("login")">Login</a>
        </div>
    </header>

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
